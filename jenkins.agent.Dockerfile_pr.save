FROM ubuntu:latest as installer

# Install curl
RUN apt-get update && \
    apt-get install -y curl && \
    rm -rf /var/lib/apt/lists/*

# Install AWS CLI
RUN curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
RUN apt-get update \
  && apt-get install -y unzip \
  && unzip awscliv2.zip \
  && ./aws/install --bin-dir /aws-cli-bin/

# Install Snyk
RUN mkdir /snyk && cd /snyk \
    && curl https://static.snyk.io/cli/v1.666.0/snyk-linux -o snyk \
    && chmod +x ./snyk

# Install Python and create venv
FROM installer as pythonInstaller
RUN apt-get update \
    && apt-get install -y python3 python3-venv

# Create a Python virtual environment
RUN python3 -m venv /venv

FROM jenkins/agent

# Copy the `docker` (client only!!!) from the `docker` image to this image.
COPY --from=docker /usr/local/bin/docker /usr/local/bin/

# Copy AWS CLI, Snyk, and Python venv from installer stages
COPY --from=installer /usr/local/aws-cli/ /usr/local/aws-cli/
COPY --from=installer /aws-cli-bin/ /usr/local/bin/
COPY --from=installer /snyk/ /usr/local/bin/

# Copy Python venv from pythonInstaller stage
COPY --from=pythonInstaller /venv /venv

# Set PATH to include Python venv
ENV PATH="/venv/bin:$PATH"
